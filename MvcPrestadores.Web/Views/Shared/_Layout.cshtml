@using System.Globalization
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=5, IE=8, IE=9, IE=10">
    <style>
        .zopim {
            right: 180px !important;
        }
    </style>
    <meta charset="utf-8" />


    <link rel="icon" type="image/gif/png" href="https://d22uy85tnpcynx.cloudfront.net/2019/11/logo-metro.jpg">
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.pin.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/knockout-3.5.1.js" type="text/javascript"></script>

    <script src="~/Scripts/localStorage.js" type="text/javascript"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="http://www.atlasestateagents.co.uk/javascript/tether.min.js"></script>

    <script src="~/Scripts/jquery.bootpag.js"></script>
    <script src="~/Scripts/jquery.bootpag.min.js"></script>

    <script type="text/javascript">
        $.ajaxSetup({ timeout: 140000 });
    </script>

    <script type="text/javascript">
        Date.prototype.yyyymmdd = function () {
            var mm = this.getMonth() + 1; // getMonth() is zero-based
            var dd = this.getDate();

            return [
                this.getFullYear(),
                (mm > 9 ? '' : '0') + mm,
                (dd > 9 ? '' : '0') + dd
            ].join('-');
        };

    </script>

    <title>@ViewBag.Title - Ventas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>



    @Html.Partial("_Header")
    <div class="Cargando" data-bind="visible: loadingData()">
        <div style="display: flex; align-items: center; height: 100%; width: 100%; position: absolute; left: 48% !important;">
            <a><i class="fa fa-spinner fa-spin fa-4x fa-fw"></i></a>
        </div>
    </div>
    <main class="al-main">
        <div class="al-content">
            @RenderBody()
            <div>
                <div id="myModal" class="modal fade" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content" id="myModalContent">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    @Html.Partial("_Footer")





    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/gijgo.min.js" type="text/javascript"></script>
    <link href="~/Content/gijgo.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/messages.es-es.js" type="text/javascript"></script>
    <script src="~/Scripts/moment-with-locales.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
  
</body>
</html>
